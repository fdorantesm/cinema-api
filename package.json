{
  "name": "cinema-api",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "A simple API for a cinema",
  "author": "Fernando Dorantes <fernando@dorant.es>",
  "private": false,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:bun": "nest start --watch --exec \"bun run\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,test}/**/*.ts\" --fix",
    "lint:staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.example -- jest --config ./jest-e2e.json --runInBand",
    "hello": "docker-compose up -d",
    "bye": "docker-compose down",
    "compodoc": "compodoc -p tsconfig.json --theme material --output docs",
    "compodoc:serve": "serve -p 6521 docs",
    "docker:publish": "dotenv ./docker.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.540.0",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/swagger": "^7.4.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connection-string": "^4.4.0",
    "express-rate-limit": "^7.1.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.11.0",
    "json-logger-service": "^9.0.1",
    "mongoose": "^8.3.1",
    "mongoose-anonymoose": "^1.0.0",
    "mongoose-paginate": "^5.0.3",
    "mongoose-query-parser": "^1.3.1",
    "nestjs-uuid": "^0.1.4",
    "passport": "^0.7.0",
    "passport-cookie": "^1.0.9",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "pug": "^3.0.2",
    "ramda": "^0.29.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/express": "^4.17.20",
    "@types/jest": "29.5.12",
    "@types/luxon": "^3.3.3",
    "@types/mongoose-paginate": "^5.0.14",
    "@types/nedb": "^1.8.16",
    "@types/node": "20.10.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-hexagonal-architecture": "^1.0.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-yml": "^1.10.0",
    "faker": "5.5.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.1",
    "nedb-promises": "^6.2.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
